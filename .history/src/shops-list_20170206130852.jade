- var owlNavLight = true
include templates/head.jade
body.page-inner
	.page-wrapper
		include templates/components/menu/mobile-top-menu--catalog.jade
		include templates/header.jade
		section.catalog-header
			picture
				//[if IE 9]><!
				video(style='display: none;')
					//<![endif]
					source(srcset='img/shops-list__header-bg.jpg', media='(min-width: 1366px)')
					source(srcset='img/catalog-banner--1366.jpg', media='(min-width: 1024px)')
					source(srcset='img/catalog-banner--1024.jpg', media='(min-width: 800px)')
					source(srcset='img/catalog-banner--800.jpg', media='(min-width: 520px)')
					source(srcset='img/catalog-banner--520.jpg', media='(min-width: 340px)')
					source(srcset='img/catalog-banner--340.jpg', media='(max-width: 340px)')
				source(srcset='img/shops-list__header-bg.jpg', media='(min-width: 1366px)')
				source(srcset='img/catalog-banner--1366.jpg', media='(min-width: 1024px)')
				source(srcset='img/catalog-banner--1024.jpg', media='(min-width: 800px)')
				source(srcset='img/catalog-banner--800.jpg', media='(min-width: 520px)')
				source(srcset='img/catalog-banner--520.jpg', media='(min-width: 340px)')
				source(srcset='img/catalog-banner--340.jpg', media='(max-width: 340px)')
				img(srcset='img/shops-list__header-bg.jpg')
		section.page-content.page-content.page-content--shops-list
			section.page-content-header
				section.breadcrumbs
					a.breadcrumbs-item(href="#") Главная
				h1.page-title магазины
			.page-content__left
				button.button.button--default.js-toggle-shop-search Поиск магазина
				.search-shop
					.search-shop__title поиск магазина
					.search-shop__group
						.title Город
						select.js-select(data-placeholder="Все")
							option(value="")
							option(value="1") 1
							option(value="2") 2
					.search-shop__group
						.title Линия метро
						select.js-select(data-placeholder="Любая")
							option(value="")
							option(value="1") 1
							option(value="2") 2
					.search-shop__group
						.title Станция метро
						select.js-select(data-placeholder="Любая")
							option(value="")
							option(value="1") 1
							option(value="2") 2
					.search-shop__group
						.title Улица
						input.input-text.input-text--search(type="text" placeholder="Введите название")
					.search-shop__group
						.title Бренд
						select.js-select(data-placeholder="Любой")
							option(value="")
							option(value="1") 1
							option(value="2") 2
					.search-shop__group-bottom
						input.input-checkbox(type="checkbox")
						i.icon.icon__flacon
						span В магазине есть парфюмерия
					button.button.button--default Найти
			.page-content__right
				.shops-list__container
					include templates/components/shops-block-page.jade
		include templates/components/section-journal.jade
		include templates/footer.jade
